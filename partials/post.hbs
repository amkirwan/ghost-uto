<article class="{{post_class}}">
  <header class="post-header">
      <time pubdate="pubdate" class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
      <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
  </header>
  <section class="post-content">
    {{content}} 
  </section>
  <footer class="footer post-meta">
    <div class="texture">
      {{tags separator="&#124;" prefix="Tagged in:"}}
    </div>
  </footer>
</article>
